# Voice-as-a-Service Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# Application Settings
# ============================================
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# AI Core - Whisper ASR
# ============================================
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# ============================================
# AI Core - TTS (Text-to-Speech)
# ============================================
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_DEVICE=cpu
TTS_SAMPLE_RATE=22050

# ============================================
# AI Core - LLM (Language Model)
# ============================================
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_API_KEY=your_openai_api_key_here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
DEFAULT_SYSTEM_PROMPT=You are a helpful assistant.

# ============================================
# AI Core - NLU (Rasa)
# ============================================
RASA_ENDPOINT=http://localhost:5005
RASA_TIMEOUT=30

# ============================================
# AI Core - Content Moderation
# ============================================
DETOXIFY_MODEL=original
MODERATION_THRESHOLD=0.7

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SESSION_TTL=3600
REDIS_NAMESPACE=vaas

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vaas_platform
POSTGRES_USER=vaas_user
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_MIN_POOL_SIZE=5
POSTGRES_MAX_POOL_SIZE=20

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=vaas_embeddings
QDRANT_VECTOR_SIZE=384
QDRANT_EMBEDDING_MODEL=all-MiniLM-L6-v2
QDRANT_DISTANCE_METRIC=cosine
# Supported distance metrics: cosine, dot, euclid

# ============================================
# Domain Configuration
# ============================================
DOMAIN_CONFIG_PATH=config/domains

# ============================================
# API Rate Limiting
# ============================================
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# ============================================
# Data Adapter (External APIs)
# ============================================
DATA_ADAPTER_TIMEOUT=30
DATA_ADAPTER_MAX_RETRIES=3
DATA_ADAPTER_USER_AGENT=VaaS-Platform/1.0

# ============================================
# Policy and Compliance
# ============================================
REQUIRE_MODERATION=true

# ============================================
# Analytics
# ============================================
ENABLE_ANALYTICS=true

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================
# File Paths
# ============================================
LOGS_DIR=logs
TMP_DIR=tmp
MODELS_DIR=models

